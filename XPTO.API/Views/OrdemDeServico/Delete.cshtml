@model XPTO.API.Services.Dtos.OrdemDeServicoDto

@{
  ViewData["Title"] = "Deletar";
}

<h1>Deletar</h1>

<h3>Você tem certeza que deseja deletar essa ordem de serviço?</h3>

<div>
  <hr/>
  <dl class="row">

    <dt class="col-sm-3">
      Número da Ordem de Serviço
    </dt>
    <dd class="col-sm-9">
      @Html.DisplayFor(model => model.NumeroOrdemDeServico)
    </dd>
    
    <dt class="col-sm-3">
      Título do Serviço
    </dt>
    <dd class="col-sm-9">
      @Html.DisplayFor(model => model.TituloServico)
    </dd>
    
    <dt class="col-sm-3">
      CNPJ do Cliente
    </dt>
    <dd class="col-sm-9">
      @Html.DisplayFor(model => model.CnpjCliente)
    </dd>
    
    <dt class="col-sm-3">
      Nome do Cliente
    </dt>
    <dd class="col-sm-9">
      @Html.DisplayFor(model => model.NomeCliente)
    </dd>
    
    <dt class="col-sm-3">
      CPF do Prestador de Serviço
    </dt>
    <dd class="col-sm-9">
      @Html.DisplayFor(model => model.CpfPrestadorServico)
    </dd>
    
    <dt class="col-sm-3">
      Nome do Prestador de Serviço
    </dt>
    <dd class="col-sm-9">
      @Html.DisplayFor(model => model.NomePrestadorServico)
    </dd>
    
    <dt class="col-sm-3">
      Valor do Serviço
    </dt>
    <dd class="col-sm-9">
      @Html.DisplayFor(model => model.ValorServico)
    </dd>
    
    <dt class="col-sm-3">
      Data de Execução do Serviço
    </dt>
    <dd class="col-sm-9">
      @Html.DisplayFor(model => model.DataExecucaoServico)
    </dd>
    
  </dl>

  <form asp-action="Delete">
    <input type="hidden" asp-for="Id"/>
    <input type="submit" value="Deletar" class="btn btn-danger"/> |
    <a asp-action="Index">Voltar Para a Lista</a>
  </form>

</div>